<div class="paging-box">
    <div class="paging-btn">上一页</div>
    <%
    pageBtn = [];
    minPage = 1;
    if (currentPage > 2) {
        minPage = currentPage - 2;
    }
    maxPage = totalPage;
    if (currentPage + 3 < totalPage) {
        maxPage = currentPage + 3
    }
    while (minPage < maxPage) {
        pageBtn.push(minPage);
        minPage++;
    }
    %>
    <% pageBtn.forEach(function (value) { %>
        <div class="paging-btn <%= (value == currentPage ? 'paging-btn-active' : '') %>"><%= value %></div>
    <% }) %>
    <div class="paging-btn">下一页</div>
    <span>当前第<%= currentPage %>页，共 <%= totalPage %>页，<%= totalCount %> 条数据</span>
</div>