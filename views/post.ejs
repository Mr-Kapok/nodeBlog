<%- include('header') %>

<div class="page-body">
    <div class="article-card">
        <div class="article-card-title">
            <h2><%= post.title %></h2>
        </div>
        <div class="article-card-content">
            <%- post.content %>
        </div>
        <div class="article-card-footer">
            <span class="label">访问:<%= post.pv %></span>
            <span class="label">留言:<%= post.commentsCount %></span>
            <span class="label">创建日期:<%= post.created_at %></span>
        </div>
    </div>
    <%- include('components/comments') %>
</div>


<%- include('footer') %>